    {
      "name": "Create item",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const { code } = pm.response;\r",
              "\r",
              "if (code === 201) {\r",
              "    pm.test(\"Status code is 201\", () => {\r",
              "        pm.response.to.have.status(201);\r",
              "    });\r",
              "\r",
              "    pm.test(\"Response has an ID\", () => {\r",
              "        var jsonData = pm.response.json();\r",
              "        pm.expect(jsonData).to.have.property('id');\r",
              "        pm.expect(jsonData.id).to.be.a('number');\r",
              "        pm.environment.set(\"itemId\", jsonData.id)\r",
              "    });\r",
              "\r",
              "    pm.test(\"Item has correct values\", () => {\r",
              "        var jsonData = pm.response.json();\r",
              "        var requestBody = JSON.parse(pm.request.body.raw);\r",
              "        pm.expect(jsonData.name).to.eql(requestBody.name);\r",
              "        pm.expect(jsonData.price).to.eql(requestBody.price);\r",
              "    });\r",
              "}\r",
              "\r",
              "if(code === 400) {\r",
              "    const {field, message} = pm.response.json().error;\r",
              "\r",
              "    if(field === 'name') {\r",
              "        pm.test(\"Error message if field name is incorrect\", () => {\r",
              "            pm.expect(field).to.eql('name');\r",
              "            pm.expect(message).to.eql('Le champ \"name\" est requis et doit être une chaîne non vide.')\r",
              "        });\r",
              "    }\r",
              " \r",
              "    if(field === 'description') {\r",
              "        pm.test(\"Error message if field description is incorrect\", () => {\r",
              "            pm.expect(field).to.eql('description');\r",
              "            pm.expect(message).to.eql('Le champ \"description\" est requis et doit être une chaîne de caractères.')\r",
              "        });\r",
              "    }\r",
              "\r",
              "    if(field === 'price') {\r",
              "        pm.test(\"Error message if field price is incorrect\", () => {\r",
              "            pm.expect(field).to.eql('price');\r",
              "            pm.expect(message).to.eql('Le champ \"price\" est requis et doit être un nombre et supérieur à 0.')\r",
              "        });\r",
              "    }\r",
              "\r",
              "}\r",
              "\r",
              "if(code === 404) {\r",
              "    pm.test(\"Status code is 404\", () => {\r",
              "        pm.response.to.have.status(404);\r",
              "    });\r",
              "}\r",
              "\r",
              ""
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
