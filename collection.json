    {
      "name": "Get item by id",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const { code } = pm.response;\r",
              "\r",
              "if(code === 200) {\r",
              "    pm.test(\"Status is 200 OK\", () => {\r",
              "        pm.response.to.have.status(200);\r",
              "    });\r",
              "\r",
              "    pm.test(\"Item ID matches\", () => {\r",
              "        const response = pm.response.json();\r",
              "        const expectedId = pm.variables.get(\"itemId\");\r",
              "        pm.expect(response.id).to.equal(expectedId);\r",
              "    });\r",
              "\r",
              "    pm.test(\"Required fields exist\", () => {\r",
              "        const item = pm.response.json();\r",
              "        pm.expect(item).to.have.all.keys(\r",
              "            'id', 'name', 'description', 'price'\r",
              "        );\r",
              "    });\r",
              "}\r",
              "\r",
              "if(code === 404) {\r",
              "    pm.test(\"Returns 404 for invalid ID\", () => {\r",
              "        pm.response.to.have.status(404);\r",
              "    });\r",
              "\r",
              "    pm.test(\"Error message is clear\", () => {\r",
              "        const response = pm.response.json();\r",
              "        pm.expect(response).to.have.property('error');\r",
              "        pm.expect(response.error)\r",
              "            .to.include('Non trouvé');\r",
              "    });\r",
              "}"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
